# Test Environment Configuration
# These values are used during integration tests with the test Docker stack (docker-compose.test.yaml)

# Public URL of the test Next.js app (runs on port 3001 during tests)
NEXT_PUBLIC_APP_DOMAIN=http://localhost:3001
# Internal URL of the Next.js app for server-side calls (same as public in test env)
NEXT_INTERNAL_URL=http://localhost:3001

# Ory Kratos URLs (test instance — see docker-compose.test.yaml)
NEXT_PUBLIC_KRATOS_PUBLIC_URL=http://localhost:6545
KRATOS_PUBLIC_BASE_URL=http://localhost:6545
KRATOS_ADMIN_URL=http://localhost:6544

# Ory Hydra URLs (test instance — see docker-compose.test.yaml)
NEXT_PUBLIC_HYDRA_PUBLIC_URL=http://localhost:6444
HYDRA_PUBLIC_BASE_URL=http://localhost:6444
HYDRA_ADMIN_URL=http://localhost:6445

# OAuth2 Client Configuration (matches hydra-setup/setup.test.sh)
NEXT_PUBLIC_OAUTH_CLIENT_ID=test-client-id
OAUTH_CLIENT_ID=test-client-id
OAUTH_CLIENT_SECRET=test-client-secret
OAUTH2_CLIENT_ID=test-client-id
OAUTH2_CLIENT_SECRET=test-client-secret
OAUTH2_REDIRECT_URI=http://localhost:3001/auth/callback

# Sentry (disabled during tests — leave DSN empty to disable)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=