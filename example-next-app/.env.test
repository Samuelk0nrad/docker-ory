# Test Environment Configuration
# These values are used during integration tests with the test Docker stack

# Ory Kratos URLs (test instance)
NEXT_PUBLIC_KRATOS_URL=http://localhost:6545
KRATOS_ADMIN_URL=http://localhost:6544
KRATOS_PUBLIC_BASE_URL=http://localhost:6545

# Ory Hydra URLs (test instance)
NEXT_PUBLIC_HYDRA_URL=http://localhost:6444
HYDRA_ADMIN_URL=http://localhost:6445
HYDRA_PUBLIC_BASE_URL=http://localhost:6444

# OAuth2 Client Configuration (matches hydra-setup/setup.test.sh)
OAUTH2_CLIENT_ID=test-client-id
OAUTH2_CLIENT_SECRET=test-client-secret
OAUTH2_REDIRECT_URI=http://localhost:3001/auth/callback

# Test Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Secrets (test-only, not for production)
HYDRA_SYSTEM_SECRET=test-hydra-secret-key-change-me-in-production
KRATOS_SYSTEM_SECRET=test-kratos-secret-key-change-me-in-production

# Database (SQLite in test containers)
HYDRA_DSN=sqlite:///var/lib/sqlite/db.sqlite?_fk=true
KRATOS_DSN=sqlite:///var/lib/sqlite/db.sqlite?_fk=true

# Mail Server (test instance)
SMTP_CONNECTION_URI=smtp://mailslurper-test:1025
MAIL_FROM=no-reply@test.local

# Google OAuth (disabled in test)
GOOGLE_OAUTH2_CLIENT_ID=test-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=test-google-client-secret
